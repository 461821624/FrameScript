// @see - https://www.electron.build/configuration/configuration
{
   "appId": "com.framescript.app",
  "productName": "FrameScript",

  "directories": {
    "output": "release/${version}/${os}"
  },

  "files": [
    "dist/**",
    "dist-electron/**"
  ],

  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },

  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },

  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Utility"
  }
  "publish": [
    {
      "provider": "github",
      "owner": "461821624",
      "repo": "FrameScript"
    }
  ]
}
