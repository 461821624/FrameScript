// @see - https://www.electron.build/configuration/configuration
{
   "appId": "com.framescript.app",
  "productName": "FrameScript",
  "icon": "build/logo.svg",

  "directories": {
    "output": "release/${version}/${os}"
  },
  "extraResources": [
    {
      "from": "build",
      "to": "build",
      "filter": ["**/*"]
    }
  ],

  "files": [
    "dist/**",
    "dist-electron/**"
  ],

  "win": {
    "icon": "build/logo.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ]
  },

  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Utility"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "461821624",
      "repo": "FrameScript"
    }
  ]
}
